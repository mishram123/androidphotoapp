<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/album_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/selected_album_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected item will appear here"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/create_album_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Ablum"
        android:layout_alignParentRight="true"
        android:layout_below="@id/selected_album_text_view"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/delete_album_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Album"
        android:layout_alignParentRight="true"
        android:layout_below="@id/create_album_button"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/rename_album_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rename Album"
        android:layout_alignParentRight="true"
        android:layout_below="@id/delete_album_button"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/open_album_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Album"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rename_album_button"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/search_photos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Photos"
        android:layout_alignParentRight="true"
        android:layout_below="@id/open_album_button"
        android:layout_marginTop="16dp" />

</RelativeLayout>